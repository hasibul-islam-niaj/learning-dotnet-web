@model learning_dotnet_web.Data.Entities.User

<form method="post" asp-controller="User" asp-action="Edit" class="col-8 offset-2">
    <div class="text-center">
        <h3 class="h3">Update Existing User</h3>
        <input type="hidden" asp-for="Id"/>
        <hr/>
    </div>
    
    <div class="form-group row m-1">
        <label asp-for="UserName" class="col-form-label col-3">Name</label>
        <div class="col-9">
            <input asp-for="UserName" class="form-control"/>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group row m-1">
        <label asp-for="Designation" class="col-form-label col-3">Designation</label>
        <div class="col-9">
            <input asp-for="Designation" class="form-control"/>
            <span class="text-danger" asp-validation-for="Designation"></span>
        </div>
    </div>

    <div class="form-group row m-1">
        <label asp-for="Phone" class="col-form-label col-3">Phone</label>
        <div class="col-9">
            <input asp-for="Phone" class="form-control"/>
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>

    <div class="form-group row m-1">
        <label asp-for="Email" class="col-form-label col-3">Email</label>
        <div class="col-9">
            <input asp-for="Email" class="form-control"/>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="text-center m-3">
        <a asp-controller="User" asp-action="All" class="btn btn-light btn-sm">Cancel</a>
        <button class="btn btn-success btn-sm" type="submit">Submit</button>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}